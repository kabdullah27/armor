{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ARMOR",
  "version": "1.0.0",
  "identifier": "com.armor.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "/Users/swiftrans/.bun/bin/bun run dev",
    "beforeBuildCommand": "/Users/swiftrans/.bun/bin/bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "ARMOR - Offline PGP",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
